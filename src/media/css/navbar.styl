// Styles for the mobile navbar.
@import 'lib';

// * {
//     border: 1px solid red !important;
// }

[data-page-type~=settings] .header-button.settings,
.act-tray.active .settings {
    background-image: url(../img/pretty/gear.svg);
}

.navbar a {
    text-decoration: none;
}

.tab-link {
    display: block;

    &:hover {
        span {
            border-bottom-color: $bg-gray;
            color: $medium-gray;
        }
    }

    span {
        border-bottom: 3px solid transparent;
        color: $navbar-text;
        display: block;
    }
}

@media $narrower-than-desktop {
    // New feed navigation (mobile only).
    header .act-tray {
        display: none;
    }
    body[data-page-type~=settings] {
        .back {
            display: none;
        }
        .site {
            display: block;
            width: 35px;
        }
    }
    body[data-page-type~=leaf],
    body[data-page-type~=search] {
        .site-nav {
            // Slide out of view.
            bottom: 50px;
            margin-bottom: -50px;
        }
    }

    .site-nav {
        background: $navbar-gray;
        bottom: 0;
        height: 50px;
        overflow: hidden;
        position: relative;
        transition(bottom .5s, margin-bottom .5s);

        // act-tray is link to Settings tabs (e.g., Settings, Purchases).
        // mkt-tray is link to Marketplace tabs (e.g., Home, New, Popular).
        .act-tray,
        .mkt-tray {
            background-color: $cloud-gray;
            border: 1px solid $cement-gray;
            height: 51px;
            transition(right .4s);
            width: 56px;
            z-index: 2;

            &.active {
                right: 0;
                transition(right .2s .6s);
            }
            .header-button {
                background-size: 30px auto;
                right: 0;
                top: 0;
                width: 50px;
            }
        }
        .act-tray {
            border-radius: 0 80px 80px 0;
            bottom: 2px;
            position: relative;
            right: 55px;

            &.active .header-button.settings {
                background-image: url(../img/pretty/gear.svg);
            }
            a.settings {
                height: 50px;
            }
        }
        .mkt-tray {
            border-radius: 80px 0 0 80px;
            bottom: 0;
            position: absolute;
            right: -60px;

            a.back-to-marketplace {
                background: url(../img/pretty/marketplace-icon.svg) 50% 50% no-repeat;
                background-size: 30px auto;
                display: block;
                height: 50px;
                position: absolute;
                width: 50px;
            }
        }
        .account-links {
            display: none;
        }
    }

    .navbar {
        /* TODO: centre */
        disable-user-select();
        display: inline-block;
        opacity: 1;
        padding: 8px 0;
        position: absolute;
        top: 0;
        transition(unquote('right .5s ease-out, left .3s ease-in'));
        white-space: nowrap;
        width: 100%;

        &.nav-mkt {
            visibility: hidden;
            right: -100%;

            &.active {
                right: -65px;
                visibility: visible;
            }
        }
        &.nav-settings {
            visibility: hidden;
            right: 100%;

            &.active {
                right: 0;
                visibility: visible;
            }
        }
    }

    .tab-item {
        display: inline-block;
        font-size: 15px;
        position: relative;
        text-align: center;
        text-transform: uppercase;
        top: 2px;
        width: -moz-fit-content;
        width: -webkit-fit-content;
    }

    .tab-link {
        color: $navbar-text;
        height: 38px;
        line-height: 32px;
        padding: 0 60px;
    }

    .desktop-cat-link {
        display: none;
    }
}

@media $at-least-desktop {
    .navbar.nav-settings,
    .act-tray,
    .mkt-tray {
        display: none;
    }
    .site-nav {
        background-color: #E0E0E0;
        margin: 0 auto;
        z-index: 25;
    }
    .navbar {
        disable-user-select();
        opacity: 1;
        flex-vertical-center();
    }

    .tab-categories:hover .tab-link,
    .tab-item.active > .tab-link {
        color: $breezy-blue;
    }

    .tab-item {
        display: inline-block;
        font-size: 15px;
        // line-height: 50px;
        position: relative;
        text-align: center;
        text-transform: uppercase;
        width: -moz-fit-content;
        width: -webkit-fit-content;
    }

    .tab-link {
        // background:yellow;
        // background: orange;
        // position: relative;
        // outline: 0;
        height: $header-height;
        background: cyan;

        flex-vertical-center();

        span {
            background: green;
            margin: 0 60px;
        }
    }

    .mobile-cat-link {
        display: none;
    }

    .desktop-cat-link {
        display: flex;

        span:after {
            border: 4px solid transparent;
            border-top: 7px solid $dark-gray;
            content: "";
            margin-left: 8px;
            position: absolute;
            top: 20px;
        }

        &:hover span {
            color: $breezy-blue;

            &:after {
                border-top-color: $breezy-blue;
            }
        }
    }

    [data-page-type~=settings] .header-button.settings {
        background-image: url(../img/pretty/settings_gear.svg);
    }
}

@media $wider-desktop {
    .site-nav {
        top: 0;
    }
}

// Navbar active states.
[data-page-type~=homepage] [data-tab=homepage],
[data-page-type~=new] [data-tab=new],
[data-page-type~=popular] [data-tab=popular],
[data-page-type~=recommended] [data-tab=recommended],
[data-page-type~=categories] [data-tab=categories],
[data-page-type~=purchases] [data-tab=purchases],
[data-page-type~=feedback] [data-tab=feedback],
[data-page-type="root settings"] [data-tab=settings] {
    .tab-link span {
        border-bottom-color: $breezy-blue;
        color: $breezy-blue;

        &:hover {
            border-bottom-color: $breezy-blue;
        }
    }
}
