@import 'lib';

// base class

.mkt-tile {
    color: $castle-skull-gray;
    display: block;
    overflow: hidden;
    position: relative;
    &:hover {
        text-decoration: none;
    }
    .icon {
        display: block;
    }
    .info h3 {
        ellipsis();
    }
}

.grid, .listing {
    clear: both;
    list-style: none;
    width: 100%;
}

// Listing
// name + icon + price + rating in a vertical listview.
// also used as standalone "card" on detail pages.

.listing .mkt-tile {
    min-height: 66px;
    padding: 15px 10px 15px 84px;
    h3 {
        font-size: 15px;
        font-weight: 400;
        line-height: 20px;
        margin: -4px 0 -7px;
        padding-bottom: 9px;
    }
    .icon {
        float: left;
        position: absolute;
        top: 15px;
        left: 10px;
    }
    .author {
        color: $earl-gray;
        ellipsis();
        font-size: 12px;
        line-height: 14px;
        max-height: 28px;
        margin-bottom: -2px;
        padding-bottom: 5px;
    }
    .button {
        height: 24px;
        line-height: 24px;
        font-size: 13px;
        margin: 2px 0 2px 10px;
        min-width: 70px;
        padding: 0;
        width: 70px;
    }
    .rating {
        color: $sailor-blue;
        display: block;
        font-size: 12px;
        vertical-align: top;
        a {
            text-decoration: none;
            &:hover .cnt {
                text-decoration: underline;
            }
        }
    }
    .price {
        display: none;
    }
}
.listing .result .mkt-tile .rating .cnt {
    top: 0;
}

// Previews tray.
.expanded .mkt-tile + .tray {
    display: block;
}
.mkt-tile + .tray {
    background: $salt-flat-white;
    display: none;
    height: 208px; // 150 + 15*2 + 13 (dots) + 15;
    overflow: hidden;
    position: relative;
    &.single {
        height: 180px; // No dots so make it smaller.
    }
    .slider {
        margin-top: 15px;
        overflow: hidden;
        user-select: none;
        -webkit-user-select: none;
        -moz-user-select: none;
    }
    ul {
        height: 150px; // 150 + 15
        list-style-type: none;
        margin: 0 auto;
        overflow: hidden;
        padding: 0;
        white-space: nowrap;
    }
    li {
        float: left;
        margin-left: 15px;
        text-align: center;
        width: 150px; // Max height/width of image.
        &:first-child {
            margin-left: 0;
        }
        // The following creates a square container
        // that is as tall as the li is wide and
        // positions the img vertically and
        // horizontally center.
        .thumbnail {
            display: block;
            padding-bottom: 100%;
            position: relative;
            width: 100%;
        }
        img {
            -moz-user-select: none;
            bottom: 0;
            display: block;
            left: 0;
            margin: auto;
            max-height: 100%;
            max-width: 100%;
            position: absolute;
            right: 0;
            top: 0;
        }
    }
}

$dot-size = 13px;

.tray {
    .dots {
        margin: 15px 0;
        height: $dot-size;
        text-align: center;
        width: 100%;
    }
    .dot {
        background: $salt-flat-white;
        // Don't use shorthand, we do transitions.
        border-color: $cloud-gray;
        border-radius: ($dot-size/2);
        border-style: solid;
        border-width: 3px;
        cursor: pointer;
        display: inline-block;
        height: $dot-size;
        margin: 0 3px;
        transition-duration: 0.15s;
        transition-property: border-color, border-width;
        width: $dot-size;
        &.current,
        &:hover,
        &:active {
            border-color: $sailor-blue;
        }
        &.current {
            background: $sailor-blue;
        }
    }
}

.bad-app {
    color: $maroon;
    display: none;
    font-size: 11px;
    line-height: 12px;
}

.product-details .bad-app {
    display: block;
}

.shots .next,
.shots .prev {
    display: none;
}

.category {
    background: #fff;
    font-size: 15px;
    line-height: 16px;
    .view-all {
        display: block;
        float: right;
    }
    &.featured {
        diagonal-lines();
        border-top-color: $sailor-blue;
    }
    &.gallery {
        border-top: 7px solid $flamin-hot-cheetos-orange;
    }
}

// Grid
// store graphic, name, price in a floated grid (3 tiles wide at 320).

// We need to duplicate these styles because we use this for
// .grid at desktop width and for .listing.grid-if-desktop at mobile width.
gridStyle() {
    margin: 0 auto;
    max-width: $desktop-content;
    li {
        float: left;
        padding: 15px 10px;
        position: relative;
        width: (100% / 3);
    }
    .author,
    .button,
    .cnt,
    .unrated {
        display: none;
    }
    .mkt-tile {
        position: relative;
        width: 100%;
        &:hover .icon {
            opacity: .8;
        }
        &:active .icon {
            opacity: .4;
        }
        h3, .vital {
            font-size: 12px;
        }
        h3 {
            line-height: 16px;
            margin-bottom: -2px;
            padding-bottom: 2px;
        }
        .info {
            padding-top: 10px;
        }
        .price {
            color: $sailor-blue;
            font-weight: 400;
        }
    }
}

.grid {
    gridStyle();
}

.listing.grid-if-desktop .mkt-tile + .tray {
    display: none;
}

.tabs {
    left: 0;
    position: absolute;
    top: -7px;
    a {
        color: $earl-gray;
        display: block;
        ellipsis();
        float: left;
        font-size: 15px;
        height: 29px;
        line-height: 29px;
        margin-top: 7px;
        min-width: 150px;
        padding: 0 50px;
        position: relative;
        text-align: center;
        text-decoration: none;
        &.active {
            color: #fff;
            gradient-two-color($flamin-hot-cheetos-orange, #e66000);
            pointer-events: none;
            &:before, &:after {
                background: $salt-flat-white url(../img/pretty/tab.svg) no-repeat;
                content: "";
                display: block;
                height: 36px;
                left: 0;
                position: absolute;
                top: -7px;
                width: 50px;
                z-index: 1;
            }
            &:after {
                transform(scaleX(-1));
                left: auto;
                right: 0;
            }
        }
        &:not(.active) {
            text-shadow: 0 1px 0 #fff;
        }
        + a {
            margin-left: -50px;
        }
    }
}

@media $at-least-desktop {
    .shots {
        position: relative;
        .next, .prev {
            border-radius: 0 30px 30px 0;
            border: 15px solid rgba(#252525,.7);
            height: 60px;
            margin-top: -30px;
            position: absolute;
            top: 50%;
            width: 0;
            transition(all .2s linear);
            outline: 0;
            &:after {
                background: url(../img/icons/slider_arrow.png) no-repeat;
                content: "";
                float: right;
                height: 22px;
                left: 7px;
                position: relative;
                top: 4px;
                width: 15px;
            }
            &:hover {
                border-color: rgba(#252525,.9);
                border-left-width: 22px;
            }
            &:active {
                border-color: rgba(#777,.9);
            }
        }
        .next {
            border-radius: 30px 0 0 30px;
            right: 0;
            &:after {
                transform(scaleX(-1));
            }
            &:hover {
                border-left-width: 15px;
                border-right-width: 22px;
            }
        }
        .prev {
            left: 0;
        }
    }
    #lightbox {
        .next, .prev {
            box-shadow: 0 0 4px #fff;
        }
    }

    .category {
        border-radius: 0 0 10px 10px;
    }

    .featured {
        border-top: 7px solid $sailor-blue;
        margin-bottom: 48px;
        li {
            // Show 7 at most on desktop.
            &:nth-child(7) ~ li {
                display: none;
            }
        }
    }

    .grid,
    .listing.grid-if-desktop {
        padding: 0 5px;
    }

    // Turn listing style into category horizontal style on desktop.
    .listing.grid-if-desktop {
        gridStyle();
        li.item {
            background: none;
            border: 0;
            border-radius: 0;
            margin: 0;
            .mkt-tile {
                padding: 0;
                .icon {
                    float: none;
                    position: static;
                }
            }
            .author,
            .bad-app,
            .button {
                display: none;
            }
            .price {
                display: block;
            }
        }
        .loadmore {
            display: none;
        }
    }

    .grid,
    .listing.grid-if-desktop {
        max-width: $desktop-content;
        li {
            width: (100% / 7);
            &:nth-child(8) {
                clear: both;
            }
            &:nth-child(8):before {
                border-top: 1px dashed $london-fog-gray;
                content: "";
                display: block;
                height: 1px;
                left: -5px;
                position: absolute;
                top: -1px;
                // Span 7 columns.
                width: calc(unquote('700% + 10px'));
            }
            // Show 14 at most.
            &:nth-child(14) ~ li {
                display: none;
            }
        }
    }

    .tabs a {
        text-shadow: none;
        &.active {
            &:before, &:after {
                background-color: #fff;
            }
        }
    }
}

@media $narrower-than-desktop {
    .category.nonpaginated {
        border-top: 0;
        .listing {
            padding-top: 0;
        }
    }
    .purchases .mkt-tile + .tray {
        display: none;
    }
    .gallery {
        background: $salt-flat-white;
    }
    .grid li {
        &:nth-child(4):before {
            border-top: 1px dashed $london-fog-gray;
            content: "";
            display: block;
            height: 1px;
            position: absolute;
            top: -1px;
            // Span 3 columns.
            width: calc(unquote('300% - 20px'));
        }
        // Render featured apps in multiples of three.
        // U mad, Basta?
        &:nth-last-child(-n+2):nth-child(3n+1),
        &:nth-last-child(-n+1):nth-child(3n+2) {
             display: none;
         }
        // Show 6 at most.
        &:nth-child(6) ~ li {
            display: none;
        }
    }
    .tabs + .view-all {
        display: none;
    }
}

@media $retina {
    .shots .next, .shots .prev {
        &:after {
            background: url(../img/icons/slider_arrow-2x.png) no-repeat;
            background-size: 15px auto;
        }
    }
}
