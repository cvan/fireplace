@import 'lib';

.infobox.blurbs {
    border-top: 0;
}
.support,
.content-ratings-wrapper {
    diagonal-lines();
}
.detail .support > div {
    // Necessary to not clobber desktop L+R
    padding-bottom: 24px;
    padding-top: 24px;
}
.blurbs,
.reviews,
.support {
    background-color: #fff;
}

.blurbs {
    clear: both;
    color: $dark-gray;
    line-height: 22px;
    .summary {
        margin: 0;
    }
    h3, p, ol, ul, dl {
        margin: 15px 0;
    }
    h3 {
        font-size: 15px;
        font-weight: 500;
        line-height: 18px;
    }
    blockquote {
        background: $faint-gray;
        border-left: 2px solid $light-gray;
        color: $medium-gray;
        margin: 0;
        padding: 5px 10px;
    }
}

.reviews h3 {
    color: #333;
    font-weight: 500;
    margin-bottom: 20px;
}

.show-toggle {
    display: block;
    float: right;
    font-weight: bold;
    margin: -5px -10px 0 0;
    padding: 5px 10px 10px;
    text-align: right;
    text-transform: lowercase;
    &:before {
        content: "(";
        font-weight: 200;
    }
    &:after {
        content: ")";
        font-weight: 200;
    }
}

.collapsed {
    display: none;
}

.content-ratings-wrapper {
    border-top: 1px dashed $london-fog-gray;
    h3 {
        padding-bottom: 20px;
    }
}

.content-rating {
    color: $text;
    display: table;
    margin-bottom: 15px;
    &:last-child {
        margin-bottom: 0;
    }
    .icon {
        border-radius: 5px;
        background: $black;
        color: $white;
        float: left;
        font: 600 32px/64px $open-stack;
        height: 64px;
        margin-right: 15px;
        text-align: center;
        vertical-align: middle;
        width: 64px;
    }
    .icon-L {
        background: $box-green;
    }
    .icon-10 {
        background: $box-blue;
    }
    .icon-12 {
        background: $box-yellow;
    }
    .icon-14 {
        background: $box-orange;
    }
    .icon-16 {
        background: $box-red;
    }
    .description {
        display: table-cell;
        font-weight: 400;
        margin: 0;
        vertical-align: middle;
        width: 100%;
    }
}

.actions {
    p {
        margin: 0;
        + p {
            margin-top: 15px;
        }
    }
    .button {
        position: relative;
        z-index: 1;
        width: 100%;
    }
}

.support {
    ul {
        margin: 0;
        list-style-type: none;
        padding: 0;
        a, time {
            display: inline-block;
        }
    }
    li {
        float: left;
        margin-bottom: 10px;
        min-height: 100px;
        width: 480px;
    }
    p {
        margin: 0;
    }
}

// ***************** Wide Mobile (> 671px)

@media $at-least-desktop {
    .blurbs {
        > div {
            text-columns(2, 24px);
        }
        h3, p, ol, ul, dl {
            margin: 24px 0;
        }
        .summary {
            position: relative;
        }
    }
    #reviews-detail {
        font-size: 15px;
        ul.c {
            margin: 0 -12px;
            position: relative;
            li.review {
                float: left;
                padding: 0 12px;
                width: 50%;
            }
        }
    }

    .detail {
        border-radius: 10px;
        border: 1px solid $seavan-salt-white;
        margin: 0 auto;
        max-width: $desktop-content;
        overflow: hidden;
        h3 {
            font-weight: 500;
        }
    }

    // At desktop width, let's float the content ratings.
    .content-ratings {
        margin: 0 -15px;
    }

    .content-rating {
        float: left;
        padding: 0 15px;
        width: 50%;
    }

    // Chrome fix. This seems to be the reflow issue: http://is.gd/d06sTY
    .actions .button {
        width: 572px;
    }
}
